<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivities.EdutUserDataActivities.EditDataMenu">

    <Button
        android:id="@+id/clickToChangeProfilePhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="click!"
        app:layout_constraintBottom_toBottomOf="@+id/changeProfilePhotoTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/changeProfilePhotoTextView"
        app:layout_constraintTop_toTopOf="@+id/changeProfilePhotoTextView" />

    <TextView
        android:id="@+id/changeProfilePhotoTextView"
        android:layout_width="259dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="112dp"
        android:text="Do you want to change profile photo?"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/clickToChangeBackgroundPhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="click!"
        app:layout_constraintBottom_toBottomOf="@+id/changeBackgroundPhotoTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/changeBackgroundPhotoTextView"
        app:layout_constraintTop_toTopOf="@+id/changeBackgroundPhotoTextView" />

    <TextView
        android:id="@+id/changeBackgroundPhotoTextView"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:text="Do you want to change background photo?"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/changeProfilePhotoTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeProfilePhotoTextView" />

    <Button
        android:id="@+id/clickToChangePersonalDataButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Click!"
        app:layout_constraintBottom_toBottomOf="@+id/changePersonalDataTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/changePersonalDataTextView"
        app:layout_constraintTop_toTopOf="@+id/changePersonalDataTextView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/changePersonalDataTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:text="Do you want to change your personal data?"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/changeBackgroundPhotoTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeBackgroundPhotoTextView" />
</android.support.constraint.ConstraintLayout>