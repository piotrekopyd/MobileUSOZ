<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="70dp"
    android:id="@+id/note_recycler_view_item_layout">

    <ImageView
        android:id="@+id/note_recycler_view_item_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="17dp"
        app:srcCompat="@android:drawable/btn_dialog" />

    <TextView
        android:id="@+id/note_recycler_view_item_text_view"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="30dp"
        android:layout_toStartOf="@+id/note_recycler_view_item_image_view"
        android:text="example"
        android:textSize="15sp" />
</RelativeLayout>