<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <RelativeLayout
        android:id="@+id/maps_relative_layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/included_drawer_layout"
            layout="@layout/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/included_drawer_layout"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            tools:context=".MapsActivity" />

        <FrameLayout
            android:id="@+id/map_frame_layout"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/included_drawer_layout"
            android:layout_alignStart="@+id/map"
            android:layout_alignEnd="@+id/map"
            android:layout_marginStart="65dp"
            android:layout_marginTop="145dp"
            android:layout_marginEnd="65dp">

            <EditText
                android:id="@+id/map_marker_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:autofillHints=""
                android:hint="Title" />

            <EditText
                android:id="@+id/map_marker_snippet"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:autofillHints=""
                android:gravity="bottom|left"
                android:hint="Snippet" />

            <Button
                android:id="@+id/map_marker_save"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_marginTop="180dp"
                android:layout_marginEnd="0dp"
                android:layout_gravity="right|top"
                android:typeface="sans"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:background="@drawable/spinner_shape"
                android:text="@string/save_marker" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/map_color_spinner"
                android:layout_width="70dp"
                android:layout_marginEnd="130dp"
                android:layout_height="50dp"
                android:layout_gravity="right|top"
                android:layout_marginTop="180dp"
                android:textAlignment="center"
                android:typeface="sans"
                android:background="@drawable/spinner_shape">
            </android.support.v7.widget.AppCompatSpinner>

            <Button
                android:id="@+id/map_marker_delete"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginTop="180dp"
                android:layout_marginStart="0dp"
                android:layout_gravity="right|left"
                android:typeface="sans"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:background="@drawable/spinner_shape"
                android:text="@string/delete_marker" />

        </FrameLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/maps_relative_layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:background="@color/com_facebook_button_background_color_focused">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:text="Czy na pewno chcesz wyjść z aplikacji?"
                android:textAlignment="center"
                android:textSize="17sp"/>

            <Button
                android:id="@+id/maps_relative_layout2_confirm_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="70dp"
                android:background="@drawable/spinner_shape"
                android:text="Tak"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/maps_relative_layout2_reject_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="right"
                android:layout_marginEnd="70dp"
                android:background="@drawable/spinner_shape"
                android:text="Nie"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:typeface="sans" />
        </FrameLayout>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />

</android.support.v4.widget.DrawerLayout>