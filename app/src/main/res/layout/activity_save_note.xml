<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calendar.Notes.AddNewNoteActivity">

    <EditText
        android:id="@+id/saveNoteNoteTextView"
        android:layout_width="324dp"
        android:layout_height="261dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:maxLines="8"
        android:scrollbars="vertical"
        android:text="Your note "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddNewNoteDaySpinner" />

    <Button
        android:id="@+id/saveNoteSaveButton"
        android:layout_width="317dp"
        android:layout_height="62dp"
        android:layout_marginTop="40dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveNoteNoteTextView" />

    <Spinner
        android:id="@+id/AddNewNoteDaySpinner"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toStartOf="@+id/AddNewNoteMonthSpinner"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/AddNewNoteMonthSpinner"
        android:layout_width="224dp"
        android:layout_height="34dp"
        android:layout_marginEnd="44dp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="@+id/AddNewNoteDaySpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/AddNewNoteDaySpinner"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>